doctype html
html(lang='en')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='bootstrap/dist/css/bootstrap.css')
    // Website CSS style
    link(rel='stylesheet', type='text/css', href='css/newadmin.css')
    // Website Font style
    link(rel='stylesheet', href='components-font-awesome/css/font-awesome.min.css')
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Passion+One', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Oxygen', rel='stylesheet', type='text/css')
    title Admin
  body
    .container
      .row.main
        .panel-heading
          .panel-title.text-center
            h1.title Bracket Admin
            hr
        .main-login.main-center
          form.form-horizontal(method='POST', action='/newadminsave')
            .form-group
              label.cols-sm-2.control-label(for='name') Your Name
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-user.fa(aria-hidden='true')
                  input#name.form-control(type='text', name='name', placeholder='Enter your Name')
            .form-group
              label.cols-sm-2.control-label(for='email') Your Email
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-envelope.fa(aria-hidden='true')
                  input#email.form-control(type='text', name='email', placeholder='Enter your Email')
            .form-group
              label.cols-sm-2.control-label(for='username') Username
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-users.fa(aria-hidden='true')
                  input#username.form-control(type='text', name='username', placeholder='Enter your Username')
            .form-group
              label.cols-sm-2.control-label(for='password') Password
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                  input#password.form-control(type='password', name='password', placeholder='Enter your Password')
            .form-group
              label.cols-sm-2.control-label(for='confirm') Confirm Password
              .cols-sm-10
                .input-group
                  span.input-group-addon
                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                  input#confirm.form-control(type='password', name='confirm', placeholder='Confirm your Password')
            .form-group
              button.btn.btn-primary.btn-lg.btn-block.login-button(type='submit',formmethod="POST" formaction="/newadminsave") Register
            .login-register
              a(href='/admin') Login
    script(type='text/javascript', src='bootstrap/dist/js/bootstrap.js')